<view class="user-container">
  <!-- 已登录 -->
  <view wx:if="{{userInfo && Object.keys(userInfo).length}}">userInfo</view>
  <!-- 未登录 -->
  <view wx:else>
    <image class="avatar" src="../../images/user-unlogin.png"></image>
    <view>
      <button
        size="mini"
        open-type="getUserInfo"
        bindgetuserinfo="ongetUserInfo"
      >登录</button>
    </view> 
  </view>
</view>